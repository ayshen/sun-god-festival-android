<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--
    Titles for the major application sections. These will appear in the
    navigation spinner in the action bar.

    WARNING: This array MUST be kept in sync with
    R.array.navigation_fragment_class_names to prevent navigation errors.
    See above for details.
    -->
    <string-array name="navigation_spinner_items">
        <item>Lineup</item>
        <item>Map</item>
        <item>About</item>
    </string-array>


    <!--
    Class names for each of the major sections.
    List the fully-qualified name of a Fragment here to include it in the
    sections that will be available from the navigation spinner.

    WARNING: This array MUST be kept in sync with
    R.array.navigation_spinner_items to prevent navigation errors. If there
    are more items in the navigation spinner than there are fragments listed
    here, the application will crash!
    -->
    <string-array name="navigation_fragment_class_names">
        <item>edu.ucsd.sgf.app.LineupPagerFragment</item>
        <item>edu.ucsd.sgf.app.MapFragment</item>
        <item>edu.ucsd.sgf.app.InfoPagerFragment</item>
    </string-array>


    <!--
    Names of the stages.

    WARNING: this array MUST be kept in sync with R.array.lineup_files
    (in res/values/arrays.xml). If there are more lineups than stages listed
    here, they will not be displayed. If there are more stage names than
    lineups, the application may crash!
    -->
    <string-array name="stage_names">
        <item>Sun God Stage</item>
        <item>Dance Stage</item>
        <item>Midway</item>
    </string-array>


    <!--
    Names of XML files containing the lineups for each stage.

    These files must be created in res/xml in the project directory. For
    example,
        <item>hello</item>
    if declared below, would require a corresponding file
        res/xml/hello.xml

    The names of the tags that contain the performance data and their
    attributes are configured in res/values/strings.xml under the names
        lineup_xml_*
    -->
    <string-array name="lineup_files">
        <item>main_stage_lineup</item>
        <item>dance_stage_lineup</item>
        <item>midway_lineup</item>
    </string-array>


    <!--
    Titles of the informational sections.

    WARNING: this array MUST be kept in sync with R.array.info_layouts
    (in res/values/arrays.xml). If there are more information sections than
    names, they will not be displayed. If there are more names than sections,
    the application may crash!
    -->
    <string-array name="info_titles">
        <item>Welcome</item>
        <item>FAQ</item>
        <item>Don\'t Miss the Music</item>
        <item>Water program</item>
        <item>Patrons with disabilities</item>
        <item>Sun God for a Cause</item>
        <item>Transportation</item>
    </string-array>


    <!--
    -->
    <array name="info_layout_names">
        <item>info_welcome</item>
        <item>info_faq</item>
        <item>info_safety</item>
        <item>info_water</item>
        <item>info_ada</item>
        <item>info_sgfc</item>
        <item>info_bus</item>
    </array>
</resources>
