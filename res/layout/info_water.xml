<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="8dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:paddingRight="8dp">

  <TextView android:id="@+id/info_water_textview_intro"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:text="@string/info_water_intro" />

  <TextView android:id="@+id/info_water_section_1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentLeft="true"
      android:layout_below="@id/info_water_textview_intro"
      android:paddingRight="12dp"
      android:text="1"
      android:textAppearance="?android:attr/textAppearanceLarge" />
  <TextView android:id="@+id/info_water_content_1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_toRightOf="@id/info_water_section_1"
      android:layout_alignTop="@id/info_water_section_1"
      android:text="@string/info_water_1" />

  <TextView android:id="@+id/info_water_section_2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentLeft="true"
      android:layout_below="@id/info_water_content_1"
      android:paddingRight="12dp"
      android:text="2"
      android:textAppearance="?android:attr/textAppearanceLarge" />
  <TextView android:id="@+id/info_water_content_2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_toRightOf="@id/info_water_section_2"
      android:layout_alignTop="@id/info_water_section_2"
      android:text="@string/info_water_2" />

  <TextView android:id="@+id/info_water_section_3"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentLeft="true"
      android:layout_below="@id/info_water_content_2"
      android:paddingRight="12dp"
      android:text="3"
      android:textAppearance="?android:attr/textAppearanceLarge" />
  <TextView android:id="@+id/info_water_content_3"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_toRightOf="@id/info_water_section_3"
      android:layout_alignTop="@id/info_water_section_3"
      android:text="@string/info_water_3" />
</RelativeLayout>
